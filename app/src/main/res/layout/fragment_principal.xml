<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.PrincipalFragment">

    <Button
        android:id="@+id/botonRegistro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/amarilloRegistro"
        android:text="Registro"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/botonEmergencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonEmergencia"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/rojoEmergencia"
        android:text="Emergencia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonHistorial"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verdeHistorial"
        android:text="Historial"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonEmergencia" />


</androidx.constraintlayout.widget.ConstraintLayout>